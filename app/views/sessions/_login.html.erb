	<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>
		<br>

		<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me
		
		<br>


		<%= f.submit "Sign in", :id => "signinbutton" %>

	<% end %>

	<%= link_to "Forgot password?", new_password_reset_path, :id => "forgotlink" %>
