<% provide(:title, 'Contact Us') %>

<div class="clearfix">

	<div class="editprofilelogo">
		<%= link_to (image_tag "formlogo.png", :width => "200"), root_url %>
	</div>

<div class="contactform span4 offset4"> 
<h1>Contact Us</h1>

<%= form_for :suggestions, :url => home_index_path do |f| %>

<label>Name:</label>
<%= f.text_field :name %>

<label>Email:</label>
<%= f.text_field :email %>

<label>Comments and Suggestions:</label>
<%= f.text_area :comments, :rows => 5 %>

<br>
<%= f.submit "Submit" %>

<% end %>

</div>

</div>