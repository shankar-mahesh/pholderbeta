<%= form_for ([@user, @album]), :html => { :id => "uploadform" } do |f| %>
<div class="formholder">
	<%= f.label :name %>
	<%= f.text_field :name %>

	<br>
	<label>Hosts</label>

	<% if @user.friends.count != 0 %>
		<% @user.friends.each do |friend| %>
			<%= friend.name %>
			<%= check_box_tag 'album[user_ids][]', friend.id, @album.users.include?(friend) %>
		<% end %>
	<% else %>
		You currently have no friends. Find them <%= link_to "here", users_path %>.
	<% end %>

	<%= f.label :description %>
	<%= f.text_area :description, :rows => 10 %>

 	<br>

	<%=f.submit "Submit", :id => "newalbumbutton" %>
</div>
<% end %>


	