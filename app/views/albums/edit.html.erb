<% provide(:title, "Edit album") %>


<div class="container-fluid">
	<div class="row-fluid">
		<div class="editalbumform span3">
			<%= render 'form' %>
		</div>

		<div class="clearfix">
			<div class="destroypicswrapper offset1 span8">
				<% if @album.photos.any? %>
					<%= render :partial => 'photodestroy', :collection => @album.photos, :as => :photo %>
				<% end %> 
			</div>
		</div>
	</div>
</div>