<% provide(:title, 'Sign up') %>

<% if @user.errors.any? %>

		<% @user.errors.full_messages.each do |msg| %>
			<%= content_tag(:div, msg, class: "alert alert-error clearfix") %>
		<% end %>

<% end %>

<div class="span12 clearfix">
<div class="signupformholder span5 offset1">

	<h1>Sign Up</h1>

	<%= render 'form' %>

</div>

<div class="loginformholder span5">

	<h1>Already have an account?</h1>
	<%= render 'sessions/login' %>

</div>
</div>